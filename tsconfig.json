{
  "compilerOptions": {
    "outDir": "build/public/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "pages/*": ["pages/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
